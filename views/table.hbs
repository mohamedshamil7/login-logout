<section>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table">
                     
  <thead>
   
    <tr>
      <th scope="col">No</th>
      <th scope="col">Image</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td><img width="50px"; src="{{this.Image}}" alt=""></td>
      <td>{{this.name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.description}}</td>
    </tr>
  </tbody>
  {{/each}}
</table>
            </div>
        </div>
    </div>
</section>